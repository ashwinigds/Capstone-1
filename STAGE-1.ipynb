def video_statistics(z):
    request = youtube.videos().list(
        part="snippet,contentDetails,statistics",
        id=z
    )
    playlist = request.execute()

    snippet = playlist['items'][0]['snippet']
    statistics = playlist['items'][0]['statistics']
    contentDetails = playlist['items'][0]['contentDetails']

    video_statistics = {
        'video_description': snippet.get('description', 'NA'),
        'tags': snippet.get('tags', ['NA']),
        'view_count': statistics.get('viewCount', 'NA'),
        'like_count': statistics.get('likeCount', 'NA'),
        'dislike_count': statistics.get('dislikeCount', 'NA'),
        'comment_count': statistics.get('commentCount', 'NA'),
        'thumbnails': playlist['items'][0]['snippet']['thumbnails']['default'],
        'caption_status': contentDetails.get('caption', 'NA'),
        'duration': contentDetails.get('duration', 'NA')
    }
    return video_statistics


def get_video_comments(video_id):
    # Get video comments for the given video ID
    comments_data = youtube.commentThreads().list(
        part='id,snippet',
        videoId=video_id,
        textFormat='plainText',
        maxResults=10  # Adjust as needed
    ).execute()

    stat = {}
    comments_statistics = {}

    #st.write(comments_data)

    comments_list = []

    # Iterate through comment threads
    for comment_thread in comments_data.get('items', []):
        # Extract information for each comment in the thread
        comment_snippet = comment_thread.get('snippet', {}).get('topLevelComment', {}).get('snippet', {})
        
        comments_statistics = {
            'comment_ID': comment_snippet.get('id', 'NA'),
            'commentor_Name': comment_snippet.get('authorDisplayName', 'NA'),
            'comments_Text': comment_snippet.get('textOriginal', 'NA'),
            'updated_At': comment_snippet.get('updatedAt', 'NA')
        }

        # Append the comment statistics to the list
        comments_list.append(comments_statistics)

    stat = {'video_id': video_id, 'comments': comments_list}

    return stat

