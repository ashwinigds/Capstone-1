def save_to_mongodb(collection, video_info):
    collection = db[collection]
    # Ensure the document is a dict before inserting into MongoDB
    if isinstance(video_info, dict):
        collection.insert_one(video_info)
    else:
        raise ValueError("Document must be an instance of dict")

def channelDetails(x):
    print('Channel-Id', x)
    request = youtube.channels().list(
        part="snippet,contentDetails,statistics",
        id=x
    )
    response = request.execute()


    # Check if 'statistics' key exists in the response
    if 'items' in response :
        # Access statistics data if available
        channel_details = dict(
            channel_name =  response['items'][0]['snippet']['title'],
            channel_id = response['items'][0]['id'],
            channel_description = response['items'][0]['snippet']['description'],
            subscribers_count = response['items'][0]['statistics']['subscriberCount'],
            video_Count = response['items'][0]['statistics']['videoCount'],
            view_Count = response['items'][0]['statistics']['viewCount'],
            published_on = response['items'][0]['snippet']['publishedAt'],
            country = response['items'][0]['snippet']['country']
        )
    else:
        # If statistics data is missing, set default values or handle the case accordingly
        channel_details = dict(
            channel_name = response['items'][0]['snippet']['title'],
            channel_id = response['items'][0]['id'],
            subscribers_count = 'N/A',
            video_count = 'N/A',
            view_count = 'N/A',
            published_on = response['items'][0]['snippet']['publishedAt'],
            description = response['items'][0]['snippet']['description'],
            country = response['items'][0]['snippet'].get('country', 'N/A')
        )
    return channel_details

def get_channel_videos(channel_id):
    request = youtube.channels().list(
        part="snippet,contentDetails",
        id=channel_id
    )
    response = request.execute()

    playlist_id = response['items'][0]['contentDetails']['relatedPlaylists']['uploads']

    # Get the videos from the uploads playlist
    playlist_items = []
    next_page_token = None

    while True:
        playlist_response = youtube.playlistItems().list(
            playlistId=playlist_id,
            part='snippet,contentDetails',
            maxResults=5,  # Adjust as needed
            pageToken=next_page_token
        ).execute()

        playlist_items.extend(playlist_response['items'])
        next_page_token = playlist_response.get('nextPageToken')

        if not next_page_token:
            break

    return playlist_items

