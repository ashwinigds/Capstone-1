def scrap_init():
    st.title("YouTube Video List Scraper")

    if 'cd' not in st.session_state:
        st.session_state.cd = None

    if 'pl' not in st.session_state:
        st.session_state.pl = None

    if 'selected_video_title' not in st.session_state:
        st.session_state.selected_video_title = None

    channel_id = st.text_input('Enter YouTube channel ID: ', '')
    scrap_channel_button = st.button("Scrap Channel Details", key='channel_scrap_button', type="primary")

    if channel_id and scrap_channel_button:
        st.session_state.cd = channelDetails(channel_id)
        save_to_mongodb('channel', st.session_state.cd)
        st.text("Channel details saved to MongoDB.")

    if st.session_state.cd:
        if st.session_state.pl is None:
            st.session_state.pl = get_channel_videos(channel_id)

        st.text("Select a video from the list:")
        video_titles = [video['snippet']['title'] for video in st.session_state.pl]
        st.session_state.selected_video_title = st.selectbox('Videos', video_titles)

        # Get the selected video ID when the button is clicked
        video_scrap_button = st.button("Scrap Video Statistics", key='video_scrap_button', type="primary")
        if video_scrap_button:
            selected_video_id = next(video['contentDetails']['videoId'] for video in st.session_state.pl if video['snippet']['title'] == st.session_state.selected_video_title)
            vs = video_statistics(selected_video_id)
            save_to_mongodb('video_statistics', vs)
            st.text("Video statistics saved to MongoDB.")
            st.write(f"Video Statistics: {vs}")

            comments = get_video_comments(selected_video_id)

            save_to_mongodb('comments', comments)
            st.text("Video comments saved to MongoDB.")
            st.write(f"Video Comments: {comments}")

scrap_init()
